<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:gravity="bottom"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iv_wifi_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/wifi_strength_three" />

    <ImageView
        android:id="@+id/iv_wifi_encrypted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_wifi_strength"
        android:layout_toStartOf="@+id/iv_wifi_strength"
        android:src="@drawable/wifi_encrypted" />

    <TextView
        android:id="@+id/tv_ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_wifi_encrypted"
        android:layout_toStartOf="@+id/iv_wifi_encrypted"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/text_large"
        android:textSize="@dimen/text_normal"
        tools:text="PHICOMM" />
</RelativeLayout>