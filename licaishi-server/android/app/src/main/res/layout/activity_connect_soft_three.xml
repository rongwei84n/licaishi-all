<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include
        layout="@layout/include_common_header"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_add_device_vague"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_connect_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:lines="1"
            android:text="@string/connect_network" />


        <com.auts.lcssv.views.MyThreeCircleAnimationView
            android:id="@+id/mav_connect_state_active_for_three"
            android:layout_width="@dimen/canvas_width_for_three"
            android:layout_height="@dimen/canvas_height_for_three"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="@color/text_oringe"
            tools:text="60s" />

        <TextView
            android:id="@+id/tv_device_closer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="@string/connect_warning" />
    </LinearLayout>


</LinearLayout>