<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/include_common_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="26dp"
            android:text="@string/room_name"
            android:textColor="#313131"
            android:textSize="15sp" />

        <!--android:focusable="true"-->
        <!--android:focusableInTouchMode="true"-->
        <EditText
            android:id="@+id/et_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textCursorDrawable="@drawable/my_cursor"
            android:gravity="end"
            android:layout_toRightOf="@id/tv_room_name"
            android:paddingRight="10dp"
            android:layout_alignBottom="@id/tv_room_name"
            tools:text="hahha"
             />

        <com.auts.lcssv.views.ItemBar
            android:id="@+id/ib_roomPic"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            app:left_title="@string/room_image"
            app:right_image="@drawable/housemanage_img">

        </com.auts.lcssv.views.ItemBar>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/button_save"
        android:gravity="center"
        android:paddingBottom="5.5dp"
        android:text="@string/save"
        android:textColor="#ffffff"
        android:textSize="17dp" />

</LinearLayout>
