<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray_bg"
    android:orientation="vertical">

    <include layout="@layout/include_common_header" />

    <LinearLayout
        android:id="@+id/ll_head_portrait"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head_portrait"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/head_portrait"
            android:transitionName="@string/head_portrait" />


        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_large"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="137****9982" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_nickname"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingEnd="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tv_nickname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/nickname"
            android:textColor="@color/text_large"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:id="@+id/iv_right_arrow_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tv_nickname_label"
            android:layout_toLeftOf="@+id/iv_right_arrow_nickname"
            android:layout_toRightOf="@+id/tv_nickname_label"
            android:layout_toStartOf="@+id/iv_right_arrow_nickname"
            android:gravity="end"
            android:text="@string/not_set"
            android:textColor="@color/btn_disable_bg"
            android:textSize="@dimen/text_normal" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_mobile"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingEnd="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tv_mobile_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/binding_phone_number"
            android:textColor="@color/text_large"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:id="@+id/iv_right_arrow_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@+id/iv_right_arrow_mobile"
            android:layout_toStartOf="@+id/iv_right_arrow_mobile"
            android:gravity="end"
            android:src="@drawable/icon_indicator"
            android:textColor="@color/btn_disable_bg"
            android:textSize="@dimen/text_normal"
            tools:text="137****9982" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_modify_password"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingEnd="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tv_modify_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/modify_password"
            android:textColor="@color/text_large"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:id="@+id/iv_right_arrow_modify_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_exit"
        style="@style/btn_common"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:enabled="true"
        android:text="@string/exit_login" />
</LinearLayout>
